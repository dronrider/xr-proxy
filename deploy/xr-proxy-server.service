[Unit]
Description=XR Proxy Server
After=network.target

[Service]
Type=simple
ExecStart=/usr/local/bin/xr-server -c /etc/xr-proxy/server.toml
Restart=always
RestartSec=5
LimitNOFILE=65536

# Security hardening
NoNewPrivileges=true
ProtectSystem=strict
ProtectHome=true
ReadWritePaths=/var/log/xr-proxy.log
PrivateTmp=true

[Install]
WantedBy=multi-user.target
